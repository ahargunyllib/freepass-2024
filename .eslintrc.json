{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": "standard-with-typescript",
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "**/build/*",
        "**/node_modules/*",
        "**/public/*"
    ],
    "rules": {
        "semi": 2,
        "@typescript-eslint/semi": 0
    }
}